/* components/album/album.wxss */
.flx{
  display: flex;
  flex-wrap: wrap;
}
.flx-img{
  position: relative;
  width: 50vw;
  height: 100vw;
  border: 2px solid white;
  box-sizing: border-box;
  margin: 0;
}
.txt{
  position: absolute;
  left: 0;
  bottom: 0;
  color: white;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 20px;
  margin-bottom: 93vw;
  box-sizing: border-box;
}
.img{
  width: 100%;
  height: 100%;
}
.count{
  position: absolute;
  left: 0;
  bottom: 0;
  color: white;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 20px;
  margin-bottom: 87vw;
}
